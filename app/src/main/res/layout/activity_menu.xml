<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.MenuActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    android:id="@+id/fondoMenu">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_principal"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_margin="20dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center">

            <Button
                android:id="@+id/peticionesButton"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:text="@string/peticiones"
                tools:ignore="ButtonStyle,TextContrastCheck" />

            <Button
                android:id="@+id/prestamosButton"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:text="@string/prestamos"
                tools:ignore="ButtonStyle,TextContrastCheck" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center">

            <Button
                android:id="@+id/donacionesButton"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:text="@string/donaciones"
                tools:ignore="ButtonStyle,TextContrastCheck" />

            <Button
                android:id="@+id/listaButton"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:text="@string/libros_disponibles"
                tools:ignore="ButtonStyle"  />

        </TableRow>

    </TableLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/estadoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="50dp"
        android:backgroundTint="@color/white2"
        android:text="@string/estado_pendientes"
        android:textColor="@color/sec_green_700"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck"
        android:textSize="17sp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="16dp">

        <Button
            android:id="@+id/datosButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="8dp"
            android:text="@string/mis_datos" />


        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/cerrarbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cerrar_sesion"
            android:layout_gravity="bottom"
            android:layout_marginEnd="8dp"
            />

    </LinearLayout>



</LinearLayout>