<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="8dp"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center">

            <Button
                android:id="@+id/peticionesButton"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:text="@string/peticiones" />

            <Button
                android:id="@+id/prestamosButton"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:text="@string/prestamos" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center">

            <Button
                android:id="@+id/donacionesButton"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:text="@string/donaciones" />

            <Button
                android:id="@+id/listaButton"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:text="@string/libros_disponibles" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/datosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mis_datos"
        android:gravity="bottom"
        android:layout_margin="8dp"/>

</LinearLayout>