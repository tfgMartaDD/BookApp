<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_principal"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_margin="20dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center">

            <Button
                android:id="@+id/peticionesButton"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:text="@string/peticiones"/>

            <Button
                android:id="@+id/prestamosButton"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:text="@string/prestamos" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center">

            <Button
                android:id="@+id/donacionesButton"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:text="@string/donaciones" />

            <Button
                android:id="@+id/listaButton"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:text="@string/libros_disponibles" />

        </TableRow>

    </TableLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/estadoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="@string/estado_pendientes"
        style="?android:attr/buttonBarButtonStyle"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="16dp">

        <Button
            android:id="@+id/datosButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="8dp"
            android:text="@string/mis_datos" />


        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/cerrarbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cerrar_sesion"
            android:layout_gravity="bottom"
            android:layout_marginEnd="8dp"
            />

    </LinearLayout>



</LinearLayout>