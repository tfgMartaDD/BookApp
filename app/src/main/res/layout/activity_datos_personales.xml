<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.DatosPersonalesActivity"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/datos_personales"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/fotoPerfil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@color/black"
        android:contentDescription="@string/foto_perfil" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="@string/nombre_mayus"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/nombreEditText"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:autofillHints="name"
            android:hint="@string/nombre"
            android:inputType="text"
            tools:ignore="DuplicateSpeakableTextCheck" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="@string/apellido_mayus"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/apellidoEditText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_weight="5"
            android:autofillHints="apellido"
            android:hint="@string/apellido"
            android:inputType="text"
            tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="@string/email_mayus"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/correoTextView"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:textSize="20sp" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/anadirFotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/anadir_foto"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/modificarFotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/modificar_foto" />


        <Button
            android:id="@+id/modificarbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/modificar_datos" />

        <Button
            android:id="@+id/eliminarCuentabutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/red"
            android:text="@string/eliminar_cuenta"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/modoAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/modo_admin"
            style="?android:attr/buttonBarButtonStyle"
            android:visibility="invisible"/>
    </LinearLayout>


</LinearLayout>